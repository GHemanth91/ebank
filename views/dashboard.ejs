<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Credexa</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet"/>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/dashboard.css" />
</head>

<body>
  <!-- Top Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-danger px-4 py-2">
    <a class="navbar-brand fw-bold text-white" href="#">Credexa</a>
    <div class="ms-auto d-flex align-items-center gap-3">
      <span class="text-white fw-semibold">Hi, <%= user %></span>
      <div class="profile-initials rounded-circle bg-white text-danger fw-bold d-flex justify-content-center align-items-center">
        <%= user.charAt(0).toUpperCase() %>
      </div>
      <button class="btn btn-outline-light btn-sm" onclick="logout()">
        <i class="fas fa-sign-out-alt"></i> Logout
      </button>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <!-- Accounts Section -->
    <div class="mb-5">
      <h4>Your Accounts</h4>
      <div class="row" id="accountsContainer">
        <!-- Account cards dynamically inserted here -->
      </div>
    </div>

    <!-- Banking Options Section -->
    <div class="mb-5">
      <h4>Banking Options</h4>
      <div class="row g-4">
        <div class="col-md-6 col-lg-3">
          <div class="card shadow-sm border-0 banking-option-card" onclick="window.location.href='/transfer'">
            <div class="card-body text-center">
              <div class="icon-circle bg-danger-light mb-3">
                <i class="fas fa-exchange-alt text-danger"></i>
              </div>
              <h5>Transfer Money</h5>
              <p class="text-muted small">Transfer between accounts or to other people</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3">
          <div class="card shadow-sm border-0 banking-option-card" onclick="openPayBillModal()">
            <div class="card-body text-center">
              <div class="icon-circle bg-danger-light mb-3">
                <i class="fas fa-file-invoice-dollar text-danger"></i>
              </div>
              <h5>Pay Bills</h5>
              <p class="text-muted small">Pay your bills or set up recurring payments</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3">
          <div class="card shadow-sm border-0 banking-option-card" onclick="window.location.href='/savings'">
            <div class="card-body text-center">
              <div class="icon-circle bg-danger-light mb-3">
                <i class="fas fa-piggy-bank text-danger"></i>
              </div>
              <h5>Savings Goals</h5>
              <p class="text-muted small">Create and track your savings goals</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3">
          <div class="card shadow-sm border-0 banking-option-card" onclick="window.location.href='/budget'">
            <div class="card-body text-center">
              <div class="icon-circle bg-danger-light mb-3">
                <i class="fas fa-chart-pie text-danger"></i>
              </div>
              <h5>Budget Planner</h5>
              <p class="text-muted small">Create and manage your monthly budget</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Section -->
    <h4>Financial Summary</h4>
    <div class="row g-4">
      <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm border-0 stat-card">
          <div class="card-body">
            <p class="card-title text-muted">Monthly Spending</p>
            <h5>$1,245.62</h5>
            <small class="text-success"><i class="fas fa-arrow-down"></i> 12% from last month</small>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm border-0 stat-card">
          <div class="card-body">
            <p class="card-title text-muted">Monthly Income</p>
            <h5>$3,850.00</h5>
            <small class="text-success"><i class="fas fa-arrow-up"></i> 5% from last month</small>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm border-0 stat-card">
          <div class="card-body">
            <p class="card-title text-muted">Savings Goal</p>
            <h5>$10,000.00</h5>
            <div class="progress mb-2">
              <div class="progress-bar bg-danger" style="width: 78%"></div>
            </div>
            <small class="text-muted">78% complete</small>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm border-0 stat-card">
          <div class="card-body">
            <p class="card-title text-muted">Credit Score</p>
            <h5>760</h5>
            <small class="text-success"><i class="fas fa-arrow-up"></i> Excellent</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Transactions Section -->
    <div class="mt-5">
      <h4>Recent Transactions</h4>
      <div class="list-group list-group-flush" id="transactionsList">
        <div class="list-group-item d-flex justify-content-between">
          <div>
            <strong>Deposit: Payroll</strong><br />
            <small class="text-muted">Feb 25, 2025</small>
          </div>
          <div class="text-success fw-bold">+$1,850.00</div>
        </div>
        <div class="list-group-item d-flex justify-content-between">
          <div>
            <strong>Walmart</strong><br />
            <small class="text-muted">Feb 23, 2025</small>
          </div>
          <div class="text-danger fw-bold">-$87.45</div>
        </div>
        <div class="list-group-item d-flex justify-content-between">
          <div>
            <strong>Amazon Prime</strong><br />
            <small class="text-muted">Feb 21, 2025</small>
          </div>
          <div class="text-danger fw-bold">-$14.99</div>
        </div>
        <div class="list-group-item d-flex justify-content-between">
          <div>
            <strong>Uber Ride</strong><br />
            <small class="text-muted">Feb 20, 2025</small>
          </div>
          <div class="text-danger fw-bold">-$24.50</div>
        </div>
        <div class="list-group-item d-flex justify-content-between">
          <div>
            <strong>Transfer from Savings</strong><br />
            <small class="text-muted">Feb 18, 2025</small>
          </div>
          <div class="text-success fw-bold">+$500.00</div>
        </div>
        <div class="text-center mt-3">
          <button class="btn btn-outline-danger">View All Transactions</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating Action Button -->
  <div class="position-fixed bottom-0 end-0 p-4">
    <div class="dropdown">
      <button class="btn btn-danger rounded-circle shadow-lg" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-plus"></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#quickTransferModal"><i class="fas fa-exchange-alt me-2"></i> Quick Transfer</a></li>
        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#payBillModal"><i class="fas fa-credit-card me-2"></i> Pay Bill</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-mobile-alt me-2"></i> Mobile Deposit</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-user-friends me-2"></i> Send to Friend</a></li>
      </ul>
    </div>
  </div>

  <!-- Quick Transfer Modal -->
  <div class="modal fade" id="quickTransferModal" tabindex="-1" aria-labelledby="quickTransferModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="quickTransferModalLabel">Quick Transfer</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="quickTransferForm">
            <div class="mb-3">
              <label for="quickFromAccount" class="form-label">From Account</label>
              <select class="form-select" id="quickFromAccount" required>
                <option value="">Select account</option>
                <!-- Options will be populated dynamically -->
              </select>
            </div>
            <div class="mb-3">
              <label for="quickToAccount" class="form-label">To Account</label>
              <select class="form-select" id="quickToAccount" required>
                <option value="">Select account</option>
                <!-- Options will be populated dynamically -->
              </select>
            </div>
            <div class="mb-3">
              <label for="quickAmount" class="form-label">Amount</label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" id="quickAmount" min="0.01" step="0.01" required>
              </div>
            </div>
            <div class="mb-3">
              <label for="quickNote" class="form-label">Note (optional)</label>
              <input type="text" class="form-control" id="quickNote" placeholder="What's this transfer for?">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" id="quickTransferSubmit">Transfer</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Pay Bill Modal -->
  <div class="modal fade" id="payBillModal" tabindex="-1" aria-labelledby="payBillModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="payBillModalLabel">Pay Bill</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="payBillForm">
            <div class="mb-3">
              <label for="billFromAccount" class="form-label">From Account</label>
              <select class="form-select" id="billFromAccount" required>
                <option value="">Select account</option>
                <!-- Options will be populated dynamically -->
              </select>
            </div>
            <div class="mb-3">
              <label for="billPayee" class="form-label">Payee</label>
              <select class="form-select" id="billPayee" required>
                <option value="">Select payee</option>
                <option value="electricity">Electricity Company</option>
                <option value="water">Water Utility</option>
                <option value="internet">Internet Provider</option>
                <option value="rent">Rent/Mortgage</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="billAmount" class="form-label">Amount</label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" id="billAmount" min="0.01" step="0.01" required>
              </div>
            </div>
            <div class="mb-3">
              <label for="billDate" class="form-label">Payment Date</label>
              <input type="date" class="form-control" id="billDate" required>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" id="payBillSubmit">Pay Bill</button>
        </div>
      </div>
    </div>
  </div>

  <!-- JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script src="/js/dashboard.cjs"></script>
  <script>
    async function logout() {
      try {
        const response = await fetch("/auth/logout", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
        });
        if (response.ok) {
          window.location.href = "/login";
        }
      } catch (error) {
        window.location.href = "/login";
      }
    }
  </script>
</body>

</html>
